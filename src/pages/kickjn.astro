<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Viewers Kick</title>
</head>

<body style="
  margin: 0;
  background: transparent;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 48px;
  color: white;
">

  <div id="viewers">offline</div>

  <script>
    function atualizarViewersKick() {
      const viewersEl = document.getElementById("viewers");
      if (!viewersEl) return;

      fetch("https://api.kick.com/public/v1/channels/jovemnerd")
        .then(res => res.json())
        .then(data => {
          if (data.channel && data.channel.is_live && data.channel.livestream) {
            viewersEl.innerText = data.channel.livestream.viewers + " viewers";
          } else {
            viewersEl.innerText = "offline";
          }
        })
        .catch(() => {
          viewersEl.innerText = "offline";
        });
    }

    document.addEventListener("DOMContentLoaded", () => {
      atualizarViewersKick();
      setInterval(atualizarViewersKick, 30000); // atualiza a cada 30s
    });
  </script>

</body>
</html>