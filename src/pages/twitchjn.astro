<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Viewers Twitch</title>
</head>

<body style="
  margin: 0;
  background: transparent;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 48px;
  color: white;
">

  <div id="viewers">offline</div>

  <script>
    function atualizarViewers() {
      const viewersEl = document.getElementById("viewers");

      if (!viewersEl) return;

      fetch("https://api.twitchmetrics.net/c/channel/jovemnerd")
        .then(response => response.json())
        .then(data => {
          if (data.stream && typeof data.stream.viewers === "number") {
            viewersEl.innerText = data.stream.viewers + " viewers";
          } else {
            viewersEl.innerText = "offline";
          }
        })
        .catch(() => {
          viewersEl.innerText = "offline";
        });
    }

    // garante que o DOM jÃ¡ existe
    document.addEventListener("DOMContentLoaded", () => {
      atualizarViewers();
      setInterval(atualizarViewers, 30000); // atualiza a cada 30s
    });
  </script>

</body>
</html>
