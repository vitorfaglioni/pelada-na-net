<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
</head>

<body style="
  margin: 0;
  background: transparent;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 48px;
  color: white;
">

<div id="viewers">offline</div>

<script>
  function atualizarViewers() {
    const el = document.getElementById("viewers");
    if (!el) return;

    fetch("https://api.ivr.fi/v2/twitch/user?login=jovemnerd")
      .then(r => r.json())
      .then(data => {
        if (data.stream && typeof data.stream.viewersCount === "number") {
          el.innerText = data.stream.viewersCount + " viewers";
        } else {
          el.innerText = "offline";
        }
      })
      .catch(() => {
        el.innerText = "offline";
      });
  }

  document.addEventListener("DOMContentLoaded", () => {
    atualizarViewers();
    setInterval(atualizarViewers, 30000);
  });
</script>

</body>
</html>