---
const instagramUrl = "https://www.instagram.com/peladananet/embed"
---

<div class="profile">
    <iframe class="responsive-iframe" scrolling="no" width="320" height="440" src={instagramUrl} frameborder="0"></iframe>
</div>


<style>
	.profile {
		margin: 1em auto;
  		position: relative;
		overflow: hidden;
		width: 100%;
		padding-top: 100%;
		box-shadow: 0 0.2em 0.5em rgba(var(--preto, 5%));
	}

	.responsive-iframe {
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		border: none;
		border-radius: 4px;
	}
</style>