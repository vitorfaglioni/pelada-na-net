<style>
	.image {
		text-align: center;
        margin: 1em auto;
	}

    .photo {
        height: 70%;
        width: 70%;
        border-radius: 100%;
        filter: drop-shadow(0px 5px 0px var(--laranja-claro)) drop-shadow(0px -5px 0px var(--laranja-escuro));
    }

	p {
		text-align: center;
		margin: 1em auto 0;
	}

    h4 {
        color: var(--branco-azulado);
    }
   
    .icons {
		color: var(--amarelo);
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1em;
		margin: 0 auto;
	}

	.icons a {
		color: var(--amarelo);
		text-decoration: none;
	}

	.icons a:hover {
		color: var(--laranja-escuro);
	}

    .player {
    }
</style>